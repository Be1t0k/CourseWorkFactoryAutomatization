@model CourseWorkFactoryAutomatization.Models.Technic

@{
    ViewData["Title"] = "EditTechnic";
    Layout = "_Layout_SuperVisor";
}

<h1>Редактирование данных</h1>

<h4>Техника</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTechnic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicManualId" class="control-label"></label>
                <select asp-for="TechnicManualId" class="form-control" asp-items="ViewBag.TechnicManuals">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetTechnics">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
