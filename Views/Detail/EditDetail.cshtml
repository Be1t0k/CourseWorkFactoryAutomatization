@model CourseWorkFactoryAutomatization.Models.Detail

@{
    ViewData["Title"] = "EditDetail";
    Layout = "_Layout_Accountant";
}

<h1>Редактирование данных</h1>

<h4>Деталь</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicId" class="control-label"></label>
                <select asp-for="TechnicId" class="form-control" asp-items="ViewBag.Technics"></select>
                <span asp-validation-for="TechnicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailCatalogId" class="control-label"></label>
                <select asp-for="DetailCatalogId" class="form-control" asp-items="ViewBag.DetailCatalogs">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetDetails">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
