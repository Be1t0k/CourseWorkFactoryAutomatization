@model IEnumerable<CourseWorkFactoryAutomatization.Models.Detail>

@{
    ViewData["Title"] = "GetDetails";
    Layout = "_Layout_Accountant";
}

<h1>Общий список деталей</h1>

<p>
    <a asp-action="CreateDetail">Ввести деталь в эксплуатацию</a>
</p>
<p>
    <a asp-action="InfoExpenses">Получить информацию о расходах</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technic.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technic.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailCatalog)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technic.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technic.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailCatalog.Id)
            </td>
            <td>
                <a asp-action="EditDetail" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="InfoDetails" asp-route-id="@item.Id">Инфо</a> |
                <a asp-action="DeleteDetail" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
