@model CourseWorkFactoryAutomatization.Models.UserCatalog

@{
    ViewData["Title"] = "CreateUserCatalog";
    Layout = "_Layout_Admin";
}

<h1>Создать каталог пользователей</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserCatalog">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="DateCreate" class="control-label"></label>
                <input asp-for="DateCreate" class="form-control" />
                <span asp-validation-for="DateCreate" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetUserCatalogs">Назад к общему списку пользователей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
