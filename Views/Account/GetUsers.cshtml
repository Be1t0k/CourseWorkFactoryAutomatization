@model IEnumerable<CourseWorkFactoryAutomatization.Models.User>

@{
    ViewData["Title"] = "GetUsers";
    Layout = "_Layout_Admin";
}

<h1>Общий список пользователей</h1>
<label>
    <input type="checkbox" class="form-check-input" id="showpasswords">
    Показать пароли
</label>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discriminator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="password">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <input type="password" class="password" id="password" value="@Html.DisplayFor(modelItem => item.Password)" readonly>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discriminator)
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="InfoUser" asp-route-id="@item.Id">Инфо</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
