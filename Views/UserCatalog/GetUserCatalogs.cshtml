@model IEnumerable<CourseWorkFactoryAutomatization.Models.UserCatalog>

@{
    ViewData["Title"] = "GetUserCatalogs";
    Layout = "_Layout_Admin";
}

<h1>Общий список каталогов пользователей</h1>

<p>
    <a asp-action="CreateUserCatalog">Создать новый каталог</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                    <a asp-action="EditUserCatalog" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="InfoUserCatalog" asp-route-id="@item.Id">Инфо</a> |
                    <a asp-action="DeleteUserCatalog" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
